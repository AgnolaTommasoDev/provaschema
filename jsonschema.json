{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$metadata": {
    "uris": {
      "jsonLdContext": "https://raw.githubusercontent.com/AgnolaTommasoDev/provaschema/main/jsonld.json-ld",
      "jsonSchema": "https://raw.githubusercontent.com/AgnolaTommasoDev/provaschema/main/jsonschema.json"
    },
    "serialization": {
      "valueDataSlotA": "name"
    }
  },
  "type": "object",
  "required": [
    "@context",
    "id",
    "type",
    "issuanceDate",
    "credentialSchema",
    "credentialStatus",
    "credentialSubject"
  ],
  "properties": {
    "@context": {
      "type": [
        "string",
        "array",
        "object"
      ]
    },
    "id": {
      "type": "string"
    },
    "type": {
      "type": [
        "string",
        "array"
      ],
      "items": {
        "type": "string"
      }
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSchema": {
      "type": "object",
      "required": [
        "id",
        "type"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        },
        "type": {
          "type": "string"
        }
      }
    },
    "subjectPosition": {
      "type": "string",
      "enum": [
        "none",
        "index",
        "value"
      ]
    },
    "credentialSubject": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "id": {
          "title": "Credential Subject ID",
          "type": "string",
          "format": "uri"
        },
        "name": {
          "type": "string"
        },
        "surname": {
          "type": "string"
        }
      }
    }
  }
}
